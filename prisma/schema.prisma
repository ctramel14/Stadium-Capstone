generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Stadium {
  id              Int              @id @default(autoincrement())
  name            String
  teamName        String
  capacity        Int
  openYear        Int
  division        String
  address         String
  city            String
  state           String
  zipCode         Int
  imageOutsideURL String
  imageInsideURL  String
  reviews         Review[]
  visitedStadiums VisitedStadium[]
  restaurant      Restaurant[]
  hotel           Hotel[]
}

model User {
  id              Int              @id @default(autoincrement())
  firstName       String
  lastName        String
  email           String           @unique
  username        String           @unique
  password        String
  administrator   Boolean          @default(false)
  reviews         Review[]
  comments        Comment[]
  visitedStadiums VisitedStadium[]
}

model Review {
  id        Int       @id @default(autoincrement())
  date      DateTime
  rating    Int
  comment   String
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
  stadiumId Int
  stadium   Stadium   @relation(fields: [stadiumId], references: [id])
  comments  Comment[]
}

model Comment {
  id       Int    @id @default(autoincrement())
  reviewId Int
  review   Review @relation(fields: [reviewId], references: [id])
  content  String
  userId   Int
  user     User   @relation(fields: [userId], references: [id])
}

model VisitedStadium {
  id        Int     @id @default(autoincrement())
  stadiumId Int
  userId    Int
  user      User    @relation(fields: [userId], references: [id])
  stadium   Stadium @relation(fields: [stadiumId], references: [id])
}

model Restaurant {
  id        Int     @id @default(autoincrement())
  name      String
  cuisine   String
  address   String
  city      String
  state     String
  zipCode   Int
  stadiumId Int
  stadium   Stadium @relation(fields: [stadiumId], references: [id])
}

model Hotel {
  id        Int     @id @default(autoincrement())
  name      String
  address   String
  city      String
  state     String
  zipCode   Int
  stadiumId Int
  stadium   Stadium @relation(fields: [stadiumId], references: [id])
}

model ContactUs {
  id      Int    @id @default(autoincrement())
  name    String
  email   String
  message String
}
